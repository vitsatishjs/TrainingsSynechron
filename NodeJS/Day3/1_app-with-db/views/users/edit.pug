extends ../layout

block content
    h1.text-info= title
    a.row(href="/users") Back to Users
    if message.length
            div.alert.alert-info= message
    form.form-horizontal(method="post")
        fieldset
            legend Modify User Information
            .form-group
                label.control-label.col-sm-2(for='uname') Username
                .col-sm-6
                    input#uname.form-control(type="text", placeholder="Username", name="uname", value=user.username)
            .form-group
                label.control-label.col-sm-2(for='email') Email
                .col-sm-6
                    input#email.form-control(type="email", placeholder="Email", name="email", value=user.email)
            .form-group
                .col-sm-offset-2.col-sm-3
                    button.btn.btn-block.btn-primary(type='submit') Save User
                .col-sm-3
                    button.btn.btn-block.btn-default(type='reset') Reset