extends ../layout

block content
    div.container
        h1
            span.fa.fa-sign-in
            |  Login
        if message.length
            div.alert.alert-danger= message
        form(action="/login", method="post")
            .form-group
                label Email
                input.form-control(type="text", name="email")
            .form-group
                label Password
                input.form-control(type="password", name="password")
            button.btn.btn-warning.btn-lg(type="submit") Login